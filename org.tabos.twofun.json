{
    "app-id": "org.tabos.twofun",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "twofun",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dtests=false",
                "-Dexamples=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name": "twofun",
            "buildsystem": "meson",
            "config-opts": [ "--libdir=lib" ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/tabos/twofun.git",
                    "tag" : "0.4.1",
                    "commit" : "abc03a2618f2e5321f12036251874fe22f3d7b1a"
                }
            ]
        }
    ]
}
